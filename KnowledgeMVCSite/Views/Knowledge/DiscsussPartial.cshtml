@using KnowledgeMVCSite.Models
@model  IList<Discuss>



@using (Ajax.BeginForm("Discuss","Knowledge",new AjaxOptions {
    HttpMethod= "post",
    OnComplete="disucssSuccess",
    AllowCache=false     
      
      
}))
{
<input type="hidden" name="KnowledgeId" value="@ViewBag.knowledgeId" />
    <textarea  name="Context" maxlength="140" style="width:100%" class="form-control" ></textarea>
    <input type="submit" style="margin-top:10px" class="btn btn-default center-block " value="提交"/>


}


<ul class="list-group">

    @foreach (var discuss in Model)
    {
    <ur class="list-group " style="margin-top:5px">
        <li class="list-group-item" style="border:none">@discuss.Context</li>
        <li class="list-group-item" style="border:none;color:cadetblue;font-size:16px;"><b>@(discuss.User!=null? discuss.User.UserName:"匿名用户")-@discuss.CreateTime</b></li>
    </ur>
    }
</ul>

