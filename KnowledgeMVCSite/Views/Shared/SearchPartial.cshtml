@using KnowledgeMVCSite.Models
@model List<Knowledge>

@foreach (Knowledge item in Model)
{
    <div style="padding:10px 0px 0px 0px;margin-top:40px; background-color :white">
        <div style="padding-bottom:10px">
            <p style="display:block;font-size:20px">@item.User.UserName <span style="color:blue;font-size:25px;" class="glyphicon glyphicon-chevron-right"></span>@item.Category.Name</p>
            <strong style="font-size:18px;padding-left:10px">@item.Title </strong>
        </div>

        <div class="panel-body-noborder panel-fit" style="margin-bottom:15px;padding-left:10px">
            @Html.Raw(@HttpUtility.UrlDecode(@item.Context))
        </div>
        <div style="margin-bottom:-15px;padding:10px" class="well">
            <p onclick="praise(event, @item.Id,'@(User.Identity.Name==""?"0":User.Identity.Name)')"><span style="color:@(item.Praises.Where(p=>p.UserId==User.Identity.GetUserId()).Count()==0?"darkgray":"red") ;font-size:20px" class="glyphicon glyphicon-thumbs-up">@item.Praises.Count</span></p>
            <button class="btn btn-primary pull-right" style="margin-top:-33px;margin-right:0px">
                <span class="glyphicon glyphicon-share-alt"></span>分享
            </button>

            <button class="btn btn-primary pull-right" data-loading-text="加载中..." style="margin-top:-33px;margin-right:2px" onclick="discuss(event,@item.Id)">
                <span class="glyphicon glyphicon-comment">
                </span><span>@(item.Discusses.Count)</span>条评论
            </button>
        </div>
        <div class="discuss" style="margin-top:20px"></div>

    </div>



}

