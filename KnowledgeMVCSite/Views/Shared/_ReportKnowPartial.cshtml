@using KnowledgeMVCSite.Models
@model List<KnowledgeMVCSite.Models.Knowledge>

<div id="reportKnow" class="row col-md-8 col-xs-12">
    @foreach ( Knowledge item in Model)
    {
        
        <p id="@item.Id"  class="h5 col-md-offset-2" ><b>知识标题：</b>@item.Title --------@item.CreateTime
       <span>
            <a href='@Url.Action("Delete","Knowledge",routeValues:new { id = item.Id })' class="btn btn-link">编辑</a>
            <a href="#" class="btn btn-link" onclick="removeKnow(@item.Id)">删除</a>
       </span>
        </p>
        
    }
</div>
